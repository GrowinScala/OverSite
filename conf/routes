    # ROUTES
    # THIS FILE DEFINES ALL APPLICATION ROUTES (HIGHER PRIORITY ROUTES FIRST)


    #SEND AN EMAIL

POST   /email                               api.controllers.EmailsController.email


    #INBOX

GET    /chats                               api.controllers.ChatController.inbox(isTrash: Option[Boolean])
GET    /chats/:chatID/emails                api.controllers.ChatController.getEmails(chatID: String, isTrash: Option[Boolean])
GET    /chats/:chatID/emails/:emailID       api.controllers.ChatController.getEmail(chatID: String, emailID: String, isTrash: Option[Boolean])


    #SEE THE EMAILS THAT ARE INCLUDED IN THE CATEGORIES: "SENT", "RECEIVED", "DRAFT"

GET    /emails                      api.controllers.EmailsController.getEmails(status: Option[String])
GET    /emails/:emailID             api.controllers.EmailsController.getEmail(emailID: String, status: Option[String])


    #PATCH ONLY AVAILABLE TO "DRAFTS"->"SENT", #"SOMETHING"<->#"TRASH"

PATCH /emails/:emailID/send         api.controllers.EmailsController.toSent(emailID: String)
PATCH /emails/:emailID/trash        api.controllers.EmailsController.moveInOutTrash(emailID: String)
PATCH /emails/:emailID/update       api.controllers.EmailsController.updateDraft(emailID: String)


    #GIVE PERMISSION TO SOMEONE TO ACCESS THE SHARED CHATS

POST   /shares                              api.controllers.ChatController.supervised

  #TAKE PERMISSION TO SOMEONE TO ACCESS THE SHARED CHATS

DELETE /shares                              api.controllers.ChatController.takePermissions

GET    /shares                              api.controllers.ChatController.getShares
GET    /shares/:shareID/emails              api.controllers.ChatController.getSharedEmails(shareID: String)
GET    /shares/:shareID/emails/:emailID     api.controllers.ChatController.getSharedEmail(shareID: String, emailID: String)


    #TAKE PERMISSION TO SOMEONE TO ACCESS THE SHARED CHATS

DELETE /shares                              api.controllers.ChatController.takePermissions


    #AUTHENTICATION:

POST   /signin                              api.controllers.UsersController.signIn
POST   /login                               api.controllers.UsersController.logIn
PATCH  /logout                              api.controllers.UsersController.logOut


