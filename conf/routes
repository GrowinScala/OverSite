# ROUTES
# THIS FILE DEFINES ALL APPLICATION ROUTES (HIGHER PRIORITY ROUTES FIRST)


#SEND AN EMAIL
POST    /email                   api.controllers.EmailsController.email


#INBOX
GET     /chats                   api.controllers.ChatController.inbox
GET     /chats/:chatID/emails    api.controllers.ChatController.getEmails(chatID: String)
#PATCH  /chats/:chatID/emails
#GET    /chats/:chatID/emails/:emailID
#PATCH TO #"TRASH"
#PATCH  /chats/:chatID/emails/:emailID


#SEE THE EMAILS THAT ARE INCLUDED IN THE CATEGORIES: "SENT", "RECEIVED", "DRAFT", #"TRASH"
GET     /emails/:status              api.controllers.EmailsController.showEmails(status: String)
#GET    /emails/:status/:emailID
#PATCH ONLY AVAILABLE TO "DRAFTS"->"SENT", #"SOMETHING"<->#"TRASH"
#PATCH  /emails/:status/:emailID


#GIVE PERMISSION TO SOMEONE TO ACCESS THE SHARED CHATS
POST    /shares                   api.controllers.ChatController.supervised
#GET    /shares
#PATCH TO CHANGE THE ACCESS TO CHATS
#PATCH  /shares
#GET    /shares/:shareID/emails
#GET    /shares/:shareID/emails/:emailID


#AUTHENTICATION:
POST    /signin                   api.controllers.UsersController.signin
POST    /login                   api.controllers.UsersController.login
PATCH   /logout                  api.controllers.UsersController.logout

